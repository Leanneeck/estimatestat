<form>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" placeholder="Email">
  </div>
  <div class="form-group">
    <label for="rooftype">Roof Type</label>
    <select id="rooftype" class="form-control">
        <option selected=""></option>
        <option>Hip</option>
        <option>Gable</option>
        <option>Other</option>
    </select>
  </div>
  <div class="form-group">
    <label for="roofdiff">Roof Difficulty</label>
    <select id="roofdiff" class="form-control">
        <option selected=""></option>
        <option>Simple</option>
        <option>Medium</option>
        <option>Hard</option>
    </select>
  </div>
  <div class="form-group">
    <label for="numfloors">Number of floors</label>
    <input type="number" class="form-control" id="numfloors" placeholder="Number of floors">
  </div>
  <div class="form-group">
    <label for="numsky">Number of skylights</label>
    <input type="number" class="form-control" id="numsky" placeholder="Number of skylights">
  </div>
  <div class="form-group">
    <label for="numchimneys">Number of chimneys</label>
    <input type="number" class="form-control" id="numchimneys" placeholder="Number of chimneys">
  </div>
  <div class="form-group">
    <label for="lenridgev">Length of ridge vent (in.)</label>
    <input type="number" class="form-control" id="lenridgev" placeholder="Length of ridge vent (in.)">
  </div>
  <nav>
  <ul class="pager">
    <li><%= link_to "Next", estimatep2_path %></li>
  </ul>
</nav>
</form>